@model Model.EntityFramework.User
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section treeMap{
    <div class="products-breadcrumb">
        <div class="container">
            <ul>
                <li><i class="fa fa-home" aria-hidden="true"></i><a href="/">Home</a><span>|</span></li>
                <li>My Profile</li>
            </ul>
        </div>
    </div>
}
<style>
    .row {
        margin: 7px -10px;
    }

    .block_menu_profile {
        border-top: 3px solid #8bbea5;
        border-left: 1px solid #e5e5e5;
        border-right: 1px solid #e5e5e5;
        border-bottom: 1px solid #e5e5e5;
    }

    .menu_profile {
        width: 100%;
        float: left;
    }

    .item_menu_profile.active {
        background: #f7f7f7;
        color: #ff6600;
    }

    .item_menu_profile {
        padding: 7px 10px;
        display: block;
        position: relative;
    }

    .width_common {
        width: 100%;
        float: left;
    }

    .space_bottom_20 {
        margin-bottom: 20px;
    }

    .title_profile_page {
        margin-bottom: 10px;
        font-size: 18px;
        font-weight: 700;
        position: relative;
        width: 100%;
        float: left;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3  col-sm-3">
            <div class="block_menu_profile space_bottom_20">
                <div class="menu_profile width_common">
                    <a href="/Customer" class="item_menu_profile">Thông tin tài khoản</a>
                    <a href="/Customer/ChangePassword" class="item_menu_profile active">Thay đổi mật khẩu</a>
                    <a href="/Customer/OrdersHistory" class="item_menu_profile ">Lịch sử mua hàng</a>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9">
            <div class="width_common space_bottom_20">
                @using (Html.BeginForm("ChangePassword", "Customer", FormMethod.Post))
                {
                    <div class="title_profile_page">Đổi Mật Khẩu</div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Mật khẩu cũ</label>
                        <div class="col-sm-10">
                            <input type="text" name="pass" class="form-control" placeholder="Mật khẩu cũ" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Mật khẩu mới</label>
                        <div class="col-sm-10">
                            <input type="text" name="pass1" class="form-control" placeholder="Mật khẩu mới" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Xác nhận mật khẩu</label>
                        <div class="col-sm-10">
                            <input type="text" name="pass2" class="form-control" placeholder="Xác nhận mật khẩu" />
                        </div>
                    </div>
                    <div class="text-danger" style="margin-bottom: 5px; margin-left: 150px">
                        @ViewBag.Message
                    </div>
                    <button type="submit" class="col-sm-offset-2 btn btn-primary" style="margin-left: 150px">Xác nhận</button>
                }
            </div>
        </div>
    </div>
</div>

